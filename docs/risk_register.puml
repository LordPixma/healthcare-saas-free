  +getUser(event)
  +requireRole(event, role)
}

class CreateRiskHandler {
  +createRisk(event)
}
class UpdateRiskHandler {
  +updateRisk(event)
}
class GetRiskHandler {
  +getRisk(event)
}
class ListRisksHandler {
  +listRisks(event)
}

